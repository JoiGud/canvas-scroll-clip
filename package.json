{
  "name": "boomerang.js",
  "version": "0.1.0",
  "description": "Canvas image sequence animation based on scroll.",
  "author": "Mantas Skripkauskas (https://github.com/m5kr1pka)",
  "repository": "https://github.com/m5kr1pka/boomerang.js",
  "license": "MIT",
  "keywords": [
    "typescript",
    "esbuild"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/browser.js",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --theme minimal --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-browser",
    "esbuild-browser": "esbuild src/browser.ts --external:jquery --format=umd --bundle --minify --sourcemap=external --outfile=dist/build/boomerang.js",
    "esbuild-browser:dev": "esbuild src/browser.ts --external:jquery --format=umd --bundle --outfile=dist/esbuild/boomerang.js",
    "esbuild-browser:watch": "esbuild src/browser.ts --external:jquery --format=umd --bundle --watch --outfile=dist/esbuild/boomerang.js",
    "preview": "esbuild src/browser.ts --external:jquery --servedir=www  --outdir=www/js --bundle",
    "preview:docs": "esbuild --servedir=docs",
    "post-update": "yarn upgrade --latest"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/jquery": "^3.5.6",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.12.19",
    "eslint": "^7.22.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  }
}
