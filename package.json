{
  "name": "canvas-scroll-clip",
  "version": "0.1.0",
  "description": "Canvas based image sequence scroll animation. Zero dependencies.",
  "author": "Mantas Skripkauskas (https://github.com/m5kr1pka)",
  "homepage": "https://github.com/m5kr1pka/canvas-scroll-clip",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m5kr1pka/canvas-scroll-clip.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m5kr1pka/canvas-scroll-clip/issues"
  },
  "keywords": [
    "canvas",
    "animation",
    "scroll",
    "html5",
    "typescript"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/browser.js",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-browser",
    "esbuild-browser": "esbuild src/browser.ts --bundle --minify --sourcemap=external --outfile=dist/build/browser.js",
    "esbuild-browser:dev": "esbuild src/browser.ts --bundle --outfile=dist/esbuild/browser.js",
    "esbuild-browser:watch": "esbuild src/browser.ts --bundle --watch --outfile=dist/esbuild/browser.js",
    "preview": "esbuild src/browser.ts --servedir=www  --outdir=www/js --bundle",
    "preview:docs": "esbuild --servedir=docs",
    "post-update": "yarn upgrade --latest"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.12.19",
    "eslint": "^7.22.0",
    "jest": "^27.0.6",
    "jsdom": "^17.0.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  }
}